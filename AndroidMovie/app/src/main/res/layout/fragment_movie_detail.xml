<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    tools:context="edwin.androidmovie.activitys.MovieDetails"
    android:id="@+id/movie_detail">
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:id="@+id/title"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="40sp"
                android:paddingLeft="5dp"
                android:layout_height="wrap_content"/>

            <ImageView android:id="@+id/image"
                android:layout_width="230dp"
                android:layout_height="345dp"
                android:layout_below="@id/title"/>

            <TextView android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:layout_alignParentRight="true"/>

            <TextView android:id="@+id/genres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/year" />

            <TextView android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:layout_alignBaseline="@id/genres"
                android:layout_alignParentRight="true"/>

            <TextView android:id="@+id/loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/genres" />

            <TextView android:id="@+id/descriptionIntroTag"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Intro"
                android:layout_below="@id/loading" />

            <TextView android:id="@+id/descriptionIntro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/descriptionIntroTag" />

            <TextView android:id="@+id/descriptionFullTag"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Synopsis"
                android:layout_below="@id/descriptionIntro" />

            <TextView android:id="@+id/descriptionFull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/descriptionFullTag" />

            <TextView android:id="@+id/language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/descriptionFull" />

            <Button android:id="@+id/imdb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/imdb"
                android:layout_below="@id/language"/>

            <Button android:id="@+id/youtube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/imdb"
                android:text="@string/youtube"
                android:layout_toRightOf="@id/imdb"/>

            <TextView android:id="@+id/director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imdb" />

            <TextView android:id="@+id/actorOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/director" />

            <TextView android:id="@+id/actorTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/actorOne" />

            <TextView android:id="@+id/actorThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/actorTwo" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
